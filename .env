# --- Docker Compose Environment Variables ---

# --------------------
# DATABASE (MYSQL) SETTINGS
# --------------------

# Name of the database (must match the name used in db/schema.sql)
MYSQL_DATABASE=shortener_db

# User the PHP app will use to connect
MYSQL_USER=shortener_user

# Password for the application user
MYSQL_PASSWORD=supersecure

# Root password (used for initial setup, less critical after first run)
MYSQL_ROOT_PASSWORD=rootpasswor
